.wrapper {
  background-image: radial-gradient(circle at center center, #5b5b5b, #6c6c6c), repeating-radial-gradient(circle at center center, #6c6c6c, #5b5b5b, 5px, transparent 10px, transparent 5px);
  background-blend-mode: multiply;
}

.newWrapper {
  background-image: radial-gradient(circle at center center, #bbbbbb, #e9e9e9), repeating-radial-gradient(circle at center center, #777777, #bbbbbb, 5px, transparent 10px, transparent 5px);
  background-blend-mode: multiply;
}

.sysButton{
  padding: 2px 6px;
  width: 8em;
  background-color: #404040;
  color: #fff;
  border: none;
  box-shadow: 3px 3px 4px black;
}
body {
    font-family: "Source Sans Pro", sans-serif;
    color: #fff;
    margin: 0;
    padding: 0;
}
label{
    color: #fff;
}

form button {
    outline: none;
    border: none;
    background-color: #eee;
    width: 600px;
    border-radius: 3px;
    padding: 10px 15px;
    margin: 0 auto 10px auto;
    display: block;
    text-align: left;
    font-size: 18px;
    transition-duration: 0.25s;
    font-weight: 300;
    color: #000000;
    cursor: pointer;
}
form button:hover {
    background-color: #ffeeee;
}
button:hover {
    background-color: #ffeeee;
}

.block a{
display:inline-block;
}

.inline {
display:flex;
justify-content: flex-end;
}

#bta,#btb,#getfile {
  padding: 2px 6px;
  background-color: #404040;
  color: #fff;
  border: none;
  box-shadow: 3px 3px 4px black;
}

#bta:hover, #btb:hover, #getfile:hover, summary:hover, input:hover, .sysButton:hover {
    color: #000;
    background-color: #ffeeee;
}

.container{
  padding: 20px 20px;
}
